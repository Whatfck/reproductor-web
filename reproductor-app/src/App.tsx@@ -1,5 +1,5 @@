import { useLibrary } from './useLibrary';
import { usePlaylist } from './usePlaylist'; 

// --- L贸gica de la Aplicaci贸n ---

function App() {
  const {
    library,
    filteredLibrary,
    searchTerm,
    setSearchTerm,
    fileInputRef,
    handleFolderSelection,
    triggerFolderSelector,
  } = useLibrary();

