            <button className="text-xl text-gray-400 hover:text-purple-400 transition-colors" title="Repetir"></button>
          </div>

          <div className="sm:w-1/3 flex items-center justify-end gap-6 w-full sm:order-3 order-2 mt-2 sm:mt-0">
